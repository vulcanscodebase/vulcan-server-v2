{
	"info": {
		"_postman_id": "your-collection-id",
		"name": "Vulcan Server v2",
		"description": "API collection for Vulcan Server v2",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. Admin Auth",
			"item": [
				{
					"name": "Login Admin",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.token) {",
									"    pm.environment.set('adminToken', jsonData.token);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"{{adminEmail}}\",\n    \"password\": \"{{adminPassword}}\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/admin/login",
							"host": ["{{baseUrl}}"],
							"path": ["api", "admin", "login"]
						}
					}
				},
				{
					"name": "Setup Password",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"token\": \"{{setupToken}}\",\n    \"password\": \"{{newPassword}}\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/admin/setup-password",
							"host": ["{{baseUrl}}"],
							"path": ["api", "admin", "setup-password"]
						}
					}
				},
				{
					"name": "Refresh Token",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.token) {",
									"    pm.environment.set('adminToken', jsonData.token);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/admin/refresh-token",
							"host": ["{{baseUrl}}"],
							"path": ["api", "admin", "refresh-token"]
						}
					}
				},
				{
					"name": "Logout",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{adminToken}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/admin/logout",
							"host": ["{{baseUrl}}"],
							"path": ["api", "admin", "logout"]
						}
					}
				}
			]
		},
		{
			"name": "2. Admin Management",
			"item": [
				{
					"name": "Get Current Admin",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{adminToken}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/admin/me",
							"host": ["{{baseUrl}}"],
							"path": ["api", "admin", "me"]
						}
					}
				},
				{
					"name": "Create Admin User",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{adminToken}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Test Admin\",\n    \"email\": \"testadmin@example.com\",\n    \"role\": \"admin\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/admin/create-user",
							"host": ["{{baseUrl}}"],
							"path": ["api", "admin", "create-user"]
						}
					}
				},
				{
					"name": "Get All Admins",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{adminToken}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/admin",
							"host": ["{{baseUrl}}"],
							"path": ["api", "admin"]
						}
					}
				}
			]
		},
		{
			"name": "3. Role Management",
			"item": [
				{
					"name": "Create Role",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{adminToken}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Test Role\",\n    \"permissions\": [\"Colleges.view\", \"Credits.view\"]\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/admin/create-role",
							"host": ["{{baseUrl}}"],
							"path": ["api", "admin", "create-role"]
						}
					}
				}
			]
		},
		{
			"name": "4. College Management",
			"item": [
				{
					"name": "Create College",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{adminToken}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Test College\",\n    \"code\": \"TC001\",\n    \"metadata\": {\n        \"address\": \"123 Test St\",\n        \"phone\": \"1234567890\"\n    }\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/admin/colleges",
							"host": ["{{baseUrl}}"],
							"path": ["api", "admin", "colleges"]
						}
					}
				},
				{
					"name": "Get All Colleges",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{adminToken}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/admin/colleges",
							"host": ["{{baseUrl}}"],
							"path": ["api", "admin", "colleges"]
						}
					}
				},
				{
					"name": "Get College by ID",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{adminToken}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/admin/colleges/{{collegeId}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "admin", "colleges", "{{collegeId}}"]
						}
					}
				},
				{
					"name": "Add College Maintainer",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{adminToken}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"adminId\": \"{{adminId}}\",\n    \"role\": \"admin\",\n    \"permissions\": {\n        \"manage_students\": true,\n        \"manage_credits\": true\n    }\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/admin/colleges/{{collegeId}}/maintainers",
							"host": ["{{baseUrl}}"],
							"path": ["api", "admin", "colleges", "{{collegeId}}", "maintainers"]
						}
					}
				},
				{
					"name": "Remove College Maintainer",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{adminToken}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/admin/colleges/{{collegeId}}/maintainers/{{adminId}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "admin", "colleges", "{{collegeId}}", "maintainers", "{{adminId}}"]
						}
					}
				}
			]
		},
		{
			"name": "5. Credit Management",
			"item": [
				{
					"name": "Allocate College Credits",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{adminToken}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"amount\": 1000\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/admin/colleges/{{collegeId}}/credits",
							"host": ["{{baseUrl}}"],
							"path": ["api", "admin", "colleges", "{{collegeId}}", "credits"]
						}
					}
				},
				{
					"name": "Distribute Credits",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{adminToken}}",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"distributions\": [\n        {\n            \"userId\": \"{{userId1}}\",\n            \"amount\": 100\n        },\n        {\n            \"userId\": \"{{userId2}}\",\n            \"amount\": 200\n        }\n    ]\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/admin/colleges/{{collegeId}}/distribute",
							"host": ["{{baseUrl}}"],
							"path": ["api", "admin", "colleges", "{{collegeId}}", "distribute"]
						}
					}
				},
				{
					"name": "Get Credit Transactions",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{adminToken}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{baseUrl}}/api/admin/credits/transactions?type=college&entityId={{collegeId}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "admin", "credits", "transactions"],
							"query": [
								{
									"key": "type",
									"value": "college"
								},
								{
									"key": "entityId",
									"value": "{{collegeId}}"
								}
							]
						}
					}
				}
			]
		}
	],
