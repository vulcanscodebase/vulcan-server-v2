# Backend Server Environment Variables Template
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=5001

# MongoDB Connection
# For local development (with local MongoDB):
MONGO_URI=mongodb://localhost:27017/vulcan_db
# For local development (with Docker MongoDB):
# MONGO_URI=mongodb://admin:your-password@localhost:27017/vulcan_db?authSource=admin
# For production (MongoDB Atlas):
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/vulcan_db

# JWT Configuration (Generate using: openssl rand -base64 32)
JWT_SECRET=your-jwt-secret-here
JWT_REFRESH_SECRET=your-refresh-secret-here
SESSION_SECRET=your-session-secret-here

# Frontend URLs
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001
BACKEND_URL=http://localhost:5001

# Google OAuth 2.0 (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:5001/api/auth/google/callback

# Email Service (Optional - choose SendGrid OR SMTP)
# Option 1: SendGrid
SENDGRID_API_KEY=
FROM_EMAIL=noreply@yourdomain.com

# Option 2: SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Super Admin Credentials
SUPER_ADMIN_EMAIL=admin@vulcans.com
SUPER_ADMIN_PASSWORD=change-this-password

# AI API Keys for Interview Functionality (REQUIRED)
# Get these from:
# - AssemblyAI: https://www.assemblyai.com/app/account
# - OpenRouter: https://openrouter.ai/keys
# - Google AI: https://makersuite.google.com/app/apikey
ASSEMBLYAI_API_KEY=your-assemblyai-key-here
OPENROUTER_API_KEY=your-openrouter-key-here
GOOGLE_GENERATIVE_AI_API_KEY=your-google-ai-key-here
